<h1>Listing certificates</h1>

<table>
  <tr>
    <th>Nickname</th>
    <th>Fingerprint</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @certificates.each do |certificate| %>
  <tr>
    <td><%= certificate.nickname %></td>
    <td><%= certificate.prettify_fingerprint(certificate.fingerprint) %></td>
    <td><%= link_to 'Show', user_certificate_path(@user, certificate) %></td>
    <td><%= link_to 'Edit', edit_user_certificate_path(@user, certificate) %></td>
    <td><%= link_to 'Destroy', [@user, certificate], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

